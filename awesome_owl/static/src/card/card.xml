<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.card">
        <div class="card d-inline-block m-2" style="width: 18rem;">
            <div class="card-body" t-att-class="props.class" >
                <h5 class="card-title">
                    <!-- <t t-esc="props.title" /> -->
                    <t t-slot="title"/>
                </h5>
                <span class="p-2 btn" t-on-click="toggleState">toggle</span>
                <p class="card-text">
                    <!-- <t t-out="props.body" /> -->
                    <t t-if="this.state.value" t-slot="content"/>
                </p>
            </div>
        </div>
    </t>

</templates>
