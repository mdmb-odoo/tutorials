<?xml version="1.0"?>
<odoo>
    <record id="property_search_bar" model="ir.ui.view">
        <field name="name">estate_property.view.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_tags_ids" />
                <field name="property_type_id" />
                <separator />
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                <filter string="Available" name="available" domain="['|',('state', '=', 'new'),('state', '=', 'offer_recieved')]" />
                <filter string="Available2" name="available2" domain="[('state', 'in', ['new','offer_recieved'])]" />
                <group expand="1" string="Group By">
                    <filter string="PostCode" name="postcode" context="{'group_by':'postcode'}" />
                    <filter string="Tags" name="tags" context="{'group_by':'property_tags_ids'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="property_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="property_tree_view" model="ir.ui.view">
        <field name="name">estate_property.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="total_area" />
                <field name="best_price"/>
            </tree>
        </field>
    </record>
    <record id="property_form" model="ir.ui.view">
        <field name="name">estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="property_state_change" type="object" string="Sold" class="btn-success" context="{'type': 'sold'}" />
                    <button name="property_state_change" type="object" string="Cancel" class="btn-danger" context="{'type': 'cancel'}" />
                </header>
                <sheet>
                    <group>
                        <field name="name" class="display-4 p-4" />
                        <group>
                            <group>
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                            <group>
                                <field name="expected_price" />
                                <field name="selling_price" />
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group class="w-50">
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="state"/>
                                <field name="property_type_id"/>
                                <field name="property_tags_ids" widget="many2many_tags" />
                                <field name="total_area"/>
                                <field name="best_price"/>
                            </group>
                        </page>

                        <page string="Offers">
                            <group class="w-50">
                                <field name="property_offers_ids"/>
                            </group>
                        </page>

                        <page string="Other Info">
                            <group class="w-50">
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>